<div class="card">
  <div class="card-header">
    <i class="fa fa-envelope fa-fw"></i> New Contact Form Messages
  </div>
  <div class="card-body">
    <div class="list-group">
      {% for message in messages %}
        <a href="{{path('perform_contact_message_view', {id: message.id})}}" class="list-group-item">
          {{message.name}}
          <br/>
          <span class="text-muted small">
            <em>{{message.createdAt | perform_human_date}}</em>
          </span>
        </a>
      {% else %}
        No messages
      {% endfor %}
    </div>
    <a href="{{path('perform_contact_message_list')}}" class="btn btn-light btn-block">View All</a>
  </div>
</div>
